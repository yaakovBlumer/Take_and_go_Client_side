<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yaakovblumer.takego_clientside">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".controller.LookingForBusyCarService"
            android:enabled="true"
            android:exported="true">
            >
        </service>

        <receiver
            android:name=".controller.ResponseReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".controller.Fill_Details" />
        <activity android:name=".controller.Register" />
        <activity android:name=".controller.take_and_go" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>